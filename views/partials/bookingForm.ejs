<div class="container">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="home-tab" data-bs-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Home</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="profile-tab" data-bs-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Profile</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="contact-tab" data-bs-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Contact</a>
    </li>
  </ul>





  <form class=" py-5" action="/book" method="post">
    <div class="tab-content" id="myTabContent">




      <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
        <div class="row mb-3 justify-content-center">
          <div class="col">
            <select class="form-select ">
              <option selected>Select Base Style</option>
              <option value="1">One</option>
              <option value="2">Two</option>
              <option value="3">Three</option>
            </select>
          </div>
        </div>
        <div class="row mb-3 justify-content-center">
          <div class="col">
            <select class="form-select " disabled>
              <option selected>Select Style Option</option>
              <option value="1">One</option>
              <option value="2">Two</option>
              <option value="3">Three</option>
            </select>
          </div>
        </div>

        <div class="row mb-3 text-center justify-content-center">
          <div class="col">
            <div class="row mt-0">
              <div class="col-8">
                <input type="text" class="form-control bg-transparent py-2 " name="" value="Click to select a Stylist ====>" aria-label="readonly input example" readonly />

              </div>
              <div class="col-4 text-start">
                <a class="btn btn-outline-accent d-block px-4 py-2" href="" data-bs-toggle="collapse" data-bs-target="#stylists" aria-expanded="false" aria-controls="stylists">
                  Show Stylists
                </a>
              </div>

            </div>

            <div class="collapse mt-3" id="stylists">
              <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4">
                <div class="col mb-3">
                  <a href="" class="btn btn-primary stylist img-thumbnail">Placeholder</a>
                </div>
                <div class="col mb-3">
                  <a href="" class="btn btn-warning stylist img-thumbnail">Placeholder</a>
                </div>
                <div class="col mb-3">
                  <a href="" class="btn btn-success stylist img-thumbnail">Placeholder</a>
                </div>
                <div class="col mb-3">
                  <a href="" class="btn bg-accent stylist img-thumbnail">Placeholder</a>
                </div>
              </div>

            </div>



          </div>
        </div>
      </div>

      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <div class="row mb-3 justify-content-center">
          <div class="col">
            <input type="date" class="form-control" id="start" name="trip-start" value="2021-01-27" min="2021-01-28" max="2021-02-14">
          </div>
        </div>

        <div class="row mb-3 justify-content-center">
          <div class="col">
            <label for="time" class="ps-1">Available Times</label>
            <select class="form-control" name="time">
              <option value="">12PM</option>
              <option value="">3PM</option>
              <option value="">5PM</option>
            </select>
          </div>
        </div>
      </div>

      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <div class="container px-5 " id="booking-summary">
          <div class="row accordion-border">
            <div class="col-4">
              Base Style
            </div>
            <div class="col-8 text-end">
              <strong>
                Knotless Braids
              </strong>
            </div>
          </div>
          <div class="row accordion-border">
            <div class="col-4">
              Option
            </div>
            <div class="col-8 text-end">
              <strong>
                Large Knotless Waist Length
              </strong>
            </div>
          </div>
          <div class="row accordion-border">
            <div class="col-4">
              Date
            </div>
            <div class="col-8 text-end">
              <strong> 01 April 2021</strong>
            </div>
          </div>
          <div class="row accordion-border">
            <div class="col-4 ">
              Time
            </div>
            <div class="col-8 text-end">
              <strong>12:00PM</strong>
            </div>
          </div>
          <div class="row ">
            <div class="col-4">
              Stylist
            </div>
            <div class="col-8 text-end">
              <strong>Stylist Name</strong>
            </div>
          </div>
        </div>
      </div>


      <div class="row g-3 mt-3">
        <!-- Button trigger modal -->
        <div class="col-10 col-sm-8 col-md-8">
          <button type="" role="submit" class="btn btn-outline-accent rounded-pill d-block" >
            Confirm Booking
          </button>
        </div>
        <div class="col-2 col-sm-2 col-md-2 mt-3">
          <a type="" onclick="clearForm()" class="btn btn-outline-danger py-2 d-block" name="" value=""><span class="d-none d-md-inline">Clear</span> <i class="far fa-trash-alt"></i> </a>
        </div>
        <div class="col-12 col-sm-2 col-md-2 mt-3">
          <a type="" role="submit" onclick="addToCart()" class="btn btn-warning py-2 d-block" name="" value=""> <span class="d-sm-none ">Add to Cart</span> <i class="fas fa-cart-plus"></i> </a>
        </div>



      </div>



  </form>

</div>
