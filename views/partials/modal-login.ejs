<div class="container text-center pt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 mb-2">
      <a href="/auth/google" class="text-left  w-100 btn btn-lg btn-primary btn-block p-0 m-0">
        <div class="row g-0 align-items-center">
          <div class="col-2 text-start">
            <img src="img/google-icon-2.png" class="google-icon" alt="">
          </div>
          <div class="col-10 ">
              <small> Sign in with Google</small>
          </div>
        </div>
      </a>
    </div>
    <div class="col-12 col-sm-10 col-md-8 mb-2">
      <a href="/auth/facebook" class="text-left  w-100 btn btn-lg bg-fb text-white btn-block p-0 m-0">
        <div class="row g-0 align-items-center">
          <div class="col-2 text-start ">
            <!-- <i class="fab fa-facebook-square"></i> -->
            <img src="img/fb_icon.png" class="google-icon" alt="">
          </div>
          <div class="col-8 ">
              <small class=""> Sign in with Facebook</small>
          </div>
          <div class="col-2 ">
              <small class=""> &nbsp;</small>
          </div>
        </div>
      </a>
    </div>
    <div class="col-12 col-sm-10 col-md-8 mb-3">
      <div class='line-container my-3'>
        <div class='line-icon-longer'> or </div>
      </div>
    </div>
    <div class="col-12 col-sm-10 col-md-8">
      <form class="form-signin" action="/login" method="post" id="form-signin">
        <label for="username" class="sr-only">Email address</label>
        <input type="email" id="username" name="username" class="form-control" placeholder="Email address" required autofocus>
        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" name="password" class="form-control mb-3" placeholder="Password" required>
        <button class="btn rounded-pill btn-outline-accent w-100 mb-3" type="submit">Sign in</button>
        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <!-- <p> For security measures, you are required to login with a google account, click the button below to continue.</p> -->
      </form>
      Don't have an account? Register <a href="/register" class="d-inline">here</a>
    </div>

  </div>
</div>
