<%- include ("partials/header-home.ejs")  %>

<%if (body.message){%>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <!-- <strong>Holy guacamole!</strong>  -->
  <%= body.message%>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%}else if(body.error){%>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <!-- <strong>Holy guacamole!</strong>  -->
  <%= body.error%>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%}%>




<section class="" id="account">
  <div class="container mt-5 ">
    <div class="row">
      <div class="col-10">
        <h4 class="header bordered">
          <!-- <i class="text-accent fa-xs fas fa-grip-lines-vertical"></i> -->
          Your Account
        </h4>

      </div>
      <div class="col-2 text-end">
        <a onClick="editAccountInfo()" class="d-inline "> update
          <i class="fas fa-edit"></i>
        </a>
      </div>
    </div>

  </div>



<!-- Item 1 -->
<div class=" account-wrapper pt-3 pb-5 mb-5 ">
  <div class="container mt-2">
    <form class="" action="/account" name="accountUpdateForm" id="accountUpdateForm" method="post">
      <div class="row g-5 ">
        <div class="col-xs-12 col-lg-6 ">
          <div class="row">
            <div class="col-12">
              <h5 class="d-inline  sub-header">
                Personal Information
              </h5>

            </div>

          </div>
          <hr class="mt-0 mb-3">

          <div class="row mb-3 ">
            <div class="col-12 col-sm-6">
              <label for="firstName" class="form-label">First Name</label>
              <input type="text" id="firstName" name="firstName" class="form-control" disabled value="<%=(user)? user.firstName:''%>">
            </div>
            <div class="col-12 col-sm-6">
              <label for="firstName" class="form-label">Last Name</label>
              <input type="text" id="lastName" name="lastName" class="readonly form-control" disabled value="<%=(user)? user.lastName:''%>">
            </div>
          </div>

        </div>

        <div class="col-xs-12 col-lg-6  ">
          <div class="row">
            <div class="col-12">
              <h5 class="d-inline  sub-header">
                Account Information
              </h5>

            </div>

          </div>
          <hr class="mt-0 mb-3">

          <div class="row mb-3 ">
            <div class="col-12 col-sm-6">
              <label for="username" class="form-label">Username</label>
              <input type="text" name="username" id="accountUsername" class="form-control" disabled value="<%=(user)? user.username:''%>">
            </div>

            <div class="col-12 col-sm-6">
              <label for="form-control" class="form-label">Phone</label>
              <input type="tel" name="phone" id="phone" class="form-control" disabled value="<%=(user)? user.phone:''%>">
            </div>
          </div>

        </div>
        <div class="row mb-3">
          <div class="col-12 mt-3">
            <button type="submit" id="updateAccountButton" class="btn py-2  d-none btn-outline-accent rounded-pill" name="button">
              Update Profile
            </button>

          </div>
        </div>
      </div>

    </form>
    <!-- End  of Itemm Row -->



    <div class="mt-3 ">
      <hr>
      <a href="/deleteAccess/">Delete My Account</a>
    </div>
  </div>
</div>



<%- include ("partials/footer.ejs") %>

<script type="text/javascript" src="js/account.js"></script>
