<%- include("partials/header.ejs")%>

<div class="d-block pt-3 pb-5 text-center">
  <a href="/home">
    <img src="img/logo/paris-primary-sm.png" class="logo" alt="">
  </a>
</div>

<% if(body.message){ %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%=body.message%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<%}else if(body.error){%>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%=body.error%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <%}%>

<div class="container-fluid mb-5 pb-3">

  <div class="d-flex align-items-start">
    <div class="nav flex-column nav-pills me-4 border-end pe-4" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" id="v-pills-home-tab" data-bs-toggle="pill" data-bs-target="#addStyle" type="a" role="tab" aria-controls="v-pills-home" aria-selected="true">Add Styles</a>
      <a class="nav-link" id="v-pills-stylist-tab" data-bs-toggle="pill" data-bs-target="#addStylist" type="a" role="tab" aria-controls="v-pills-stylist" aria-selected="false">Add Stylist</a>
      <a class="nav-link disabled" disabled id="v-pills-roles-tab" data-bs-toggle="pill" data-bs-target="#assignRole" type="a" role="tab" aria-controls="v-pills-roles" aria-selected="false">Role Managent</a>
    </div>

    <div class="tab-content pt-3" id="v-pills-tabContent">
      <div class="tab-pane fade show active" id="addStyle" role="tabpanel" aria-labelledby="v-pills-home-tab">
        <h3 class="sub-header mb-3">ADD STYLE</h3>
        <%- include("partials/addStylePartial.ejs")%>
      </div>
      <div class="tab-pane fade" id="addStylist" role="tabpanel" >
        <h3 class="sub-header mb-3">ADD STYLIST</h3>
        <%- include("partials/addStylist.ejs")%>
      </div>
      <div class="tab-pane fade" id="assignRole" role="tabpanel" aria-labelledby="v-pills-roles-tab">Assign Admin Privilages</div>
    </div>
  </div>
</div>




<%- include ("partials/footer.ejs") %>
<script type="text/javascript" src="/js/addStyle.js"></script>
