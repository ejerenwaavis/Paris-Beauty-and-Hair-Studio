<%- include ("partials/header.ejs")  %>
<div class="text-center pt-3">
  <img src="img/logo/paris-primary-sm.png" class="logo" alt="">

</div>


<section class="" id="">
  <div class="container col-11 col-8-sm col-lg-6 mt-5 ">
    <div class="row">
      <div class="col-12">
        <h4 class="header bordered">
          <!-- <i class="text-accent fa-xs fas fa-grip-lines-vertical"></i> -->
          Register
        </h4>
      </div>
    </div>
  </div>



  <!-- Item 1 -->
  <div class=" account-wrapper pt-3 pb-5 mb-5 ">
    <div class="container mt-2 col-11 col-8-sm col-lg-6">
      <form class="" action="/register" name="registrationForm" id="registrationForm" method="post">
        <div class="row g-5 ">
          <div class="col-xs-12 ">
            <div class="row">
              <div class="col-12">
                <h5 class="d-inline  sub-header">
                  Personal Information
                </h5>
                      <small class="text-danger">*required</small>
              </div>

            </div>
            <hr class="mt-0 mb-3">

            <div class="row ">
              <div class="col-12 col-sm-6 mb-3">
                <input type="text" id="firstName" onchange="validateAllFields(this)" required placeholder="First Name" name="firstName" class="form-control" value="<%=(user)? user.firstName:''%>">
                <small id="firstNameError" hidden  class="ms-3 text-danger">Frist should at least 3 characters</small>
              </div>
              <div class="col-12 col-sm-6 mb-3">
                <!-- <label for="firstName" class="form-label">Last Name</label> -->
                <input type="text" id="lastName" required placeholder="Last Name" onchange="validateAllFields(this)" name="lastName" class="readonly form-control" value="<%=(user)? user.lastName:''%>">
              </div>
            </div>

            <div class="row mb-3">
              <div class="col">
                <!-- <label for="DoB" class="form-label">Date Of Birth</label> -->
                <input type="date" id="DoB" required placeholder="Date Of Birth" onchange="validateAllFields(this)" value="<%=(user)?user.DoB : ""%>" name="DoB" class="form-control"/>
              </div>
            </div>


          </div>

          <div class="col-xs-12 ">
            <div class="row">
              <div class="col-12">
                <h5 class="d-inline  sub-header">
                  Account Information
                </h5>
                <small class="text-danger">*required</small>
              </div>

            </div>
            <hr class="mt-0 mb-3">

            <div class="row mb-3 ">
              <div class="col-12 col-sm-6 mb-3">
                <!-- <label for="username" class="form-label">Username</label> -->
                <input type="email" id="username" onkeyup="validateEmail(this)" required class="form-control" name="username" placeholder="Email Address" value="<%=(user)? user.username:''%>">
                <small id="usernameError" hidden  class="ms-3 text-danger">username error</small>

              </div>

              <div class="col-12 col-sm-6 mb-3">
                <!-- <label for="form-control" class="form-label">Phone</label> -->
                <input type="tel" id="phone" onchange="validateAllFields(this)" class="form-control" name="phone" placeholder="Phone Number" required value="<%=(user)? user.phone:''%>" maxlength="10" minlength="10" required>
              </div>
              <div class="col-12 col-sm-6 mb-3">
                <!-- <label for="password" class="form-label">Password</label> -->
                <input type="password" id="password" onfocus="validatePassword(this)" onkeyup="validatePassword(this)" required name="password" class="form-control"  placeholder="Password"/>
                <div class="d-block">
                  <small id="passwordError" hidden  class="ms-1 text-danger">Passwords do not match</small>
                </div>
                <div class="d-block">
                  <small id="passwordShort" hidden  class="ms-1 text-danger">Password is too short</small>
                </div>
              </div>
              <div class="col-12 col-sm-6 mb-3">
                <!-- <label for="confirmPassword" class="form-label">Confirm Password</label> -->
                <input type="password" id="confirmPassword" onfocus="validateConfirmPassword(this)"  onkeyup="validateConfirmPassword(this)" name="confirmPassword" required class="form-control" placeholder="Confirm Password">
              </div>

            </div>


            <div class="row mb-3 text-center">
              <div class="col-12 mt-3">
                <input type="submit" onclick="submitRegistrationForm(this)" id="registerButton" class="btn- btn-outline-accent rounded-pill w-100" name="button"></input>
                <!-- <a href="#" id="registerButton" onclick="submitRegistrationForm()" class="btn py-2 w-100 btn-outline-accent rounded-pill">
                  Submit
                </a> -->
              </div>
              <div class="col-12 py-3">
                Already a Paris Insider? Login <a href="/login">Here</a>
              </div>
            </div>
          </div>
        </div>
      </form>
      <!-- End  of Itemm Row -->
    </div>
  </div>






  <%- include ("partials/footer.ejs") %>
  <script type="text/javascript" src="js/registration.js"></script>
